<h1>Users#show</h1>
<p>ユーザ名 : <%= @user.username %></p>
<p>メールアドレス : <%= @user.email %></p>
<% if @user.image? %>
  <%= image_tag @user.image.to_s, class: 'mypage-article-img' %>
<% else %>
  <p>失敗</p>
<% end %>

<% if @user.posts.any? %>
  <% @user.posts.each do |post| %>
    <%= post.name %>
    <%= post.information %>
    <%= image_tag post.image.to_s %>
  <% end %>
<% end %>

<%= link_to '新規投稿', new_post_path %>

<%= link_to 'トップページ', root_path %>