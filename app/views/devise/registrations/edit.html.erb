<% breadcrumb :profile_edit, @user %>
<%= render 'devise/shared/breadcrumbs', breadcrumbs: breadcrumbs %>
<h1 class="registrations-edit-head">プロフィール編集</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="registrations-edit-wrapper">
    <div class="registrations-edit-form">
      <%= f.text_field :username, class: 'edit-form', autofocus: true %>
      <%= f.label :username %>
    </div>

    <div class="registrations-edit-form">
      <%= f.email_field :email, class: 'edit-form', autofocus: true, autocomplete: "email" %>
      <%= f.label :email %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    
    <div class="registrations-edit-form">
      <%= f.password_field :current_password, class: 'edit-form', autocomplete: "current-password" %>
      <%= f.label :current_password %>
    </div>
  
    <div class="registrations-edit-form">
      <%= f.password_field :password, class: 'edit-form', autocomplete: "new-password" %>
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <div class="space-between">
          <em>半角英数(<%= @minimum_password_length %>文字以上)</em><i>※パスワードを変更しない場合は空白にしてください</i>
        </div>
      <% end %>
    </div>
  
    <div class="registrations-edit-form">
      <%= f.password_field :password_confirmation, class: 'edit-form', autocomplete: "new-password" %>
      <%= f.label :password_confirmation %>
    </div>
  
    <div class="registrations-edit-submit">
      <%= f.submit "プロフィールを変更する", class: "registrations-btn" %>
    </div>
  </div>
<% end %>

<div class="destroy-user-wrapper">
  <h3>アカウントの削除</h3>

  <p>アカウントを削除しますか？</p>
  <div class="destroy-submit">
    <%= button_to "削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "destroy-btn" %>
  </div>
</div>
<%= link_to "マイページに戻る", :back %>
