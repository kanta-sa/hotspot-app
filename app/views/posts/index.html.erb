<h1>投稿一覧</h1>
<div class="search-form">
  <%= search_form_for @search do |f| %>
    <%= f.collection_select :prefecture_id_eq_any, Prefecture.all, :id, :name, include_blank: '都道府県を選択してください' %>
    <%= f.select( :sorts, {'並び替え': 'updated_at desc','日付の新しい順': 'updated_at desc', '日付の古い順': 'updated_at asc' })%>
    <%= f.submit "検索", class: ''%>
  <% end %>
</div>
<%= render 'posts', posts: @posts %>