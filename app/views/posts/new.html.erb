<h1 class="post-new-head">新しい投稿</h1>

<%= form_with(model: @post, local: true) do |f| %>
  <% @post.errors.full_messages.each do |msg| %>
    <li class="red-text"><%= msg %></li>
  <% end %>
  <div class="post-new-wrapper">
    <div class="post-new-top">
      <div class="left">
        <%= f.file_field :image, class: "image" %>
        <div class="form-image", onClick="$('#post_image').click()">
          <i class="fas fa-camera"><p class="help-block">※ 5MBまでの画像をアップロードできます</p></i>
        </div>
      </div>
      
      <div class="right">
        <div class="form-post-name">
          <%= f.label :name %></br>
          <%= f.text_field :name, placeholder: "名称", class: "text_field" %>
        </div>
        <div class="form-post-info">
          <%= f.label :information %></br>
          <%= f.text_area :information, placeholder: "キャプション", class: "text_area" %>
        </div>
      </div>
    </div>
    
    <div class="bottom">
      <div class="form-post-select">
        <%= f.label :prefecture_id, "都道府県" %>
        <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "都道府県を選択してください", selected: @post.prefecture_id}, {class: "post-new-select　form-control"} %>
      </div>
      <div class="form-post-select">
        <div id="cities_select">
          <%= render 'cities', prefecture_id: @post.prefecture_id %>
        </div>
      </div>  
    </div>
    <div class="post-new-submit">
      <%= f.submit "投稿", class: "post-btn" %>
    </div>
  </div>
<% end %>

