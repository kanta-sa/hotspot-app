<div class="posts-container">
  <% posts.each do |post| %>
    <div class="posts-wrapper">
      <div class="picture">
        <%= image_tag post.image.to_s, class: "post-image" %>
      </div>
      <div class="post-contents">
        <div class="left">
          <div class="img">
            <%= link_to image_tag(post.user.image.to_s, class: "user-image"), user_path(post.user) %>
          </div>
          <p><%= link_to post.user.username, user_path(post.user), class: "nav-link" %></p>
        </div>
        <div class="right">
          <p class="title"><%= post.name %></p>
          <p><%= post.prefecture.name %></p>
          <a href="/">詳細</a>
          <p><%= post.created_at.to_s(:datetime_jp) %></p>
          <ul>
            <li><i class="fa fa-commenting" aria-hidden="true"></i></li>
            <li>
              <% if current_user == post.user %>
                <%= link_to post_path(post), method: :deleted, data: { confirm: 'You sure?' } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              <% else %>
                <%= render 'favorites/favorite_button', post: post %>
              <% end %>
            </li>
          </ul>
          
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate posts %>
</div>