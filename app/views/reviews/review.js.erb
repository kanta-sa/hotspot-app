$('#review-items-wrapper').html("<%= j(render 'reviews/reviews', reviews: @review.post.reviews) %>")
$('#review-score').html("<%= j(render 'reviews/score', post: @review.post) %>")

<!--フォームを初期化-->
$("#review_content").val('')
$('#rating-value').val(null)
$stars = $('.ratings').children()
for(i=0; i<stars.length; i++){
  $stars[i].classList.remove("fa-star");
  $stars[i].classList.add("fa-star-o");
}
$('#rating-value-display').text("0")

<!--エラーメッセージ-->
$err = $('#review-err')
$err.empty()
<% if @object.errors.any? %>
  <% @object.errors.full_messages.each do |msg| %>
    $err.append( '<li><%= msg %></li>')
  <% end %>
<% end %>