<div class="review-form-wrapper">
  <p>レビューを書く</p>
  
  <p class="red-text" id="score-err"></li>
  
  <div class="rating-box">
    <%= form_with model: review, url: post_reviews_path(post), remote: true do |f| %>
      <div class="main-rating">
        <div class="ratings">
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
        </div>
        <div class="rating-value-display"><span id="rating-value-display">0</span>/5</div>
      </div>
      <div class="review-form">
        <%= f.hidden_field :post_id, value: post.id %>
        <%= f.hidden_field :score, id: "rating-value" %>
        <%= f.text_field :content, class: "text-field" %>
        <%= f.submit "保存", class: "review-btn" %>
      </div>
    <% end %>
  </div>
</div>